{
  "name": "apache-vhost-manager",
  "version": "1.0.0",
  "description": "Web interface voor Apache virtual host beheer",
  "main": "frontend/electron.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "app": "electron .",
    "app-dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "keywords": ["apache", "vhost", "management"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "electron": "^28.3.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.serverbeheer.app",
    "productName": "Serverbeheer",
    "files": [
      "**/*",
      "!node_modules/.cache/**",
      "!dist/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "asarUnpack": [
      "backend/**",
      "frontend/public/**"
    ]
  }
}
